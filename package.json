{
  "name": "project-x",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && ../venv/bin/uvicorn app.main:app --reload --port 8000",
    "dev:frontend": "NODE_NO_WARNINGS=1 npm run dev --prefix frontend",
    "build": "npm run build --prefix frontend",
    "lint": "npm run lint --prefix frontend",
    "test": "npm run test --prefix frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
